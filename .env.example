# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s
SERVER_SHUTDOWN_TIMEOUT=30s

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=cfguardian
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=10m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=change-me-in-production-use-long-random-string
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h
JWT_ISSUER=cfguardian

# Raft Cluster Configuration
RAFT_NODE_ID=node1
RAFT_BIND_ADDR=127.0.0.1:7000
RAFT_ADVERTISE_ADDR=127.0.0.1:7000
RAFT_DATA_DIR=./raft-data
RAFT_SNAPSHOT_INTERVAL=30s
RAFT_SNAPSHOT_THRESHOLD=1024
RAFT_HEARTBEAT_TIMEOUT=1s
RAFT_ELECTION_TIMEOUT=1s
RAFT_BOOTSTRAP=true
RAFT_JOIN_ADDRESSES=

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_SERVICE_NAME=cfguardian
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
OTEL_TRACE_RATIO=1.0
OTEL_METRICS_INTERVAL=15s

# Security Configuration
BCRYPT_COST=10
API_KEY_LENGTH=32
API_KEY_PREFIX=cfg_
MAX_REQUEST_SIZE=10485760
MAX_RESPONSE_SIZE=10485760

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200
RATE_LIMIT_CLEANUP_INTERVAL=1m
